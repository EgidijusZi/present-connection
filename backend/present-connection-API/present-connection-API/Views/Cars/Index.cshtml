@model IEnumerable<present_connection_API.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarFuelType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarBodyStyle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarTypeOfGearbox)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarColour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarNumberOfDoors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarFuelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarBodyStyle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarTypeOfGearbox)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarColour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarNumberOfDoors)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CarId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CarId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
